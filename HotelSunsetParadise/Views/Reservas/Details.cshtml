@model HotelSunsetParadise.Models.Reserva
@{
    ViewData["Title"] = "Detalles de Reserva";
}

<div class="page-header">
    <h2 class="page-title">
        <i class="fas fa-eye"></i>
        Detalles de Reserva
    </h2>
    <div class="btn-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-professional">
            <i class="fas fa-edit"></i>
            Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i>
            Volver al Listado
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-custom">
            <div class="card-header">
                <i class="fas fa-info-circle me-2"></i>
                Información de la Reserva
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="detail-item">
                            <label class="detail-label">
                                <i class="fas fa-user text-primary me-2"></i>
                                Cliente
                            </label>
                            <div class="detail-value">
                                @(Model.Cliente?.Nombre ?? "No especificado")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="detail-item">
                            <label class="detail-label">
                                <i class="fas fa-bed text-primary me-2"></i>
                                Habitación
                            </label>
                            <div class="detail-value">
                                <span class="badge badge-status badge-available">
                                    @(Model.Habitacion?.Numero.ToString() ?? "N/A")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="detail-item">
                            <label class="detail-label">
                                <i class="fas fa-calendar-plus text-success me-2"></i>
                                Fecha de Entrada
                            </label>
                            <div class="detail-value">
                                @Model.FechaEntrada.ToString("dddd, dd 'de' MMMM 'de' yyyy", new System.Globalization.CultureInfo("es-ES"))
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="detail-item">
                            <label class="detail-label">
                                <i class="fas fa-calendar-minus text-danger me-2"></i>
                                Fecha de Salida
                            </label>
                            <div class="detail-value">
                                @Model.FechaSalida.ToString("dddd, dd 'de' MMMM 'de' yyyy", new System.Globalization.CultureInfo("es-ES"))
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="detail-item">
                            <label class="detail-label">
                                <i class="fas fa-calendar text-info me-2"></i>
                                Noches de Estancia
                            </label>
                            <div class="detail-value">
                                @((Model.FechaSalida - Model.FechaEntrada).Days) noches
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="detail-item">
                            <label class="detail-label">
                                <i class="fas fa-dollar-sign text-warning me-2"></i>
                                Costo Total
                            </label>
                            <div class="detail-value text-gradient fs-4 fw-bold">
                                @Model.CostoTotal.ToString("C")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-custom mb-4">
            <div class="card-header">
                <i class="fas fa-chart-bar me-2"></i>
                Resumen
            </div>
            <div class="card-body text-center">
                <div class="summary-stat mb-3">
                    <div class="stat-number text-primary">@((Model.FechaSalida - Model.FechaEntrada).Days)</div>
                    <div class="stat-label">Días de Estancia</div>
                </div>
                <div class="summary-stat mb-3">
                    <div class="stat-number text-success">@Model.CostoTotal.ToString("C")</div>
                    <div class="stat-label">Costo Total</div>
                </div>
                <div class="summary-stat">
                    <div class="stat-number text-info">@((Model.CostoTotal / (Model.FechaSalida - Model.FechaEntrada).Days).ToString("C"))</div>
                    <div class="stat-label">Precio por Noche</div>
                </div>
            </div>
        </div>

        <div class="card shadow-custom">
            <div class="card-header">
                <i class="fas fa-cogs me-2"></i>
                Acciones Rápidas
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
                        <i class="fas fa-edit me-2"></i>
                        Editar Reserva
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>
                        Eliminar Reserva
                    </a>
                    <a asp-controller="Clientes" asp-action="Details" asp-route-id="@Model.ClienteId" class="btn btn-outline-primary">
                        <i class="fas fa-user me-2"></i>
                        Ver Cliente
                    </a>
                    <a asp-controller="Habitaciones" asp-action="Details" asp-route-id="@Model.HabitacionId" class="btn btn-outline-info">
                        <i class="fas fa-bed me-2"></i>
                        Ver Habitación
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>