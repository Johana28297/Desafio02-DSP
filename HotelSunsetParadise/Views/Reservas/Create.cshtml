@model HotelSunsetParadise.Models.Reserva

@{
    ViewData["Title"] = "Crear Reserva";
}

<h2>Crear Nueva Reserva</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="ClienteId" class="form-label">Cliente</label>
        <select asp-for="ClienteId" asp-items="@ViewBag.Clientes" class="form-control"></select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HabitacionId" class="form-label">Habitación</label>
        <select asp-for="HabitacionId" asp-items="@ViewBag.Habitaciones" class="form-control"></select>
        <span asp-validation-for="HabitacionId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaEntrada" class="form-label"></label>
        <input asp-for="FechaEntrada" type="date" class="form-control" />
        <span asp-validation-for="FechaEntrada" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaSalida" class="form-label"></label>
        <input asp-for="FechaSalida" type="date" class="form-control" />
        <span asp-validation-for="FechaSalida" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Reserva</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

</form>
