@model HotelSunsetParadise.Models.Reserva
@{
    ViewData["Title"] = "Eliminar Reserva";
}

<div class="page-header">
    <h2 class="page-title text-danger">
        <i class="fas fa-exclamation-triangle"></i>
        Eliminar Reserva
    </h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i>
        Volver al Listado
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-custom border-danger">
            <div class="card-header bg-danger text-white">
                <i class="fas fa-trash me-2"></i>
                Confirmar Eliminación
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>¡Atención!</strong> Esta acción no se puede deshacer. Se eliminará permanentemente la siguiente reserva:
                </div>

                <div class="reservation-summary">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="fas fa-user text-primary me-2"></i>
                                    Cliente
                                </label>
                                <div class="detail-value">
                                    @(Model.Cliente?.Nombre ?? "No especificado")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="fas fa-bed text-primary me-2"></i>
                                    Habitación
                                </label>
                                <div class="detail-value">
                                    <span class="badge badge-status badge-available">
                                        @(Model.Habitacion?.Numero.ToString() ?? "N/A")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="fas fa-calendar-plus text-success me-2"></i>
                                    Fecha de Entrada
                                </label>
                                <div class="detail-value">
                                    @Model.FechaEntrada.ToString("dd/MM/yyyy")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="fas fa-calendar-minus text-danger me-2"></i>
                                    Fecha de Salida
                                </label>
                                <div class="detail-value">
                                    @Model.FechaSalida.ToString("dd/MM/yyyy")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="fas fa-dollar-sign text-warning me-2"></i>
                                    Costo Total
                                </label>
                                <div class="detail-value text-gradient fw-bold">
                                    @Model.CostoTotal.ToString("C")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <div class="deletion-actions">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger me-2" onclick="return confirm('¿Está seguro que desea eliminar esta reserva? Esta acción no se puede deshacer.')">
                            <i class="fas fa-trash me-2"></i>
                            Sí, Eliminar Reserva
                        </button>
                    </form>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info me-2">
                        <i class="fas fa-eye me-2"></i>
                        Ver Detalles
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>
                        Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>