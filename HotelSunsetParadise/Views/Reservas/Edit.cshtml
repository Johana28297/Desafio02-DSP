@model HotelSunsetParadise.Models.Reserva
@{
    ViewData["Title"] = "Editar Reserva";
}

<div class="page-header">
    <h2 class="page-title">
        <i class="fas fa-edit"></i>
        Editar Reserva
    </h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i>
        Volver al Listado
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-custom">
            <div class="card-header">
                <i class="fas fa-edit me-2"></i>
                Modificar Información de la Reserva
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-4">
                                <label asp-for="ClienteId" class="form-label">
                                    <i class="fas fa-user text-primary me-2"></i>
                                    Cliente
                                </label>
                                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.Clientes">
                                    <option value="">-- Seleccione un Cliente --</option>
                                </select>
                                <span asp-validation-for="ClienteId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-4">
                                <label asp-for="HabitacionId" class="form-label">
                                    <i class="fas fa-bed text-primary me-2"></i>
                                    Habitación
                                </label>
                                <select asp-for="HabitacionId" class="form-control" asp-items="ViewBag.Habitaciones">
                                    <option value="">-- Seleccione una Habitación --</option>
                                </select>
                                <span asp-validation-for="HabitacionId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-4">
                                <label asp-for="FechaEntrada" class="form-label">
                                    <i class="fas fa-calendar-plus text-success me-2"></i>
                                    Fecha de Entrada
                                </label>
                                <input asp-for="FechaEntrada" type="date" class="form-control" />
                                <span asp-validation-for="FechaEntrada" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-4">
                                <label asp-for="FechaSalida" class="form-label">
                                    <i class="fas fa-calendar-minus text-danger me-2"></i>
                                    Fecha de Salida
                                </label>
                                <input asp-for="FechaSalida" type="date" class="form-control" />
                                <span asp-validation-for="FechaSalida" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group mb-4">
                                <label asp-for="CostoTotal" class="form-label">
                                    <i class="fas fa-dollar-sign text-warning me-2"></i>
                                    Costo Total
                                </label>
                                <input asp-for="CostoTotal" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                <span asp-validation-for="CostoTotal" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn-professional">
                            <i class="fas fa-save me-2"></i>
                            Guardar Cambios
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                            <i class="fas fa-eye me-2"></i>
                            Ver Detalles
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
